  <link rel="stylesheet" href="/assets/css/prism.css">
  <link rel="stylesheet" href="/assets/css/philippa.css">

  <meta name="description" content="The Web Accessibility Cookbook provides you with dozens of recipes to help you build common components on the web.">
  <meta name="theme-color" content="#803006">
  <meta name="og:image" content="https://accessibility-cookbook.com/images/og.jpg">

  <link rel="canonical" href="https://accessibility-cookbook.com{{ page.url }}">
</head>
<body>
  <header class="site-header">
  <a href="#content" class="skip-link">Skip to content</a>

    <div>
      {% set navPages = collections.pages | eleventyNavigation %}
      <nav aria-label="Main" class="nav-main">
        <ul>
        {%- for entry in navPages %}
          <li>
            <a href="{{ entry.url }}" {% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title | safe }}</a>
          </li>
        {%- endfor %}
        </ul>
      </nav>
    </div>
  </header>
  <main id="content">
  {{ content | safe  }}

  </main>
  <footer>
